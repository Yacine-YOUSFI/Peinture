{% extends 'base.html.twig' %}

{% block title %}Hello PeinturesControllersController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello Peintures! âœ…</h1>

    <ul>
        {% for peinture in peintures %}
            <li>{{ peinture.getNom()|e }}</li>
            <li>{{ peinture.getSlug()|e }}</li>
            <li>{{ peinture.getFile()|e }}</li>
        {% endfor %}
    </ul>

    <div class="navigation">
        {% do peintures.setPageRange(2) %}
        {{ knp_pagination_render(peintures, 'design/pagination.html.twig') }}
    </div>
{% endblock %}
